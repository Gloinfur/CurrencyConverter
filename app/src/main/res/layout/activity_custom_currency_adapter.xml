<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomCurrencyAdapter">


    <ImageView
        android:id="@+id/imageView_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtView_currencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_flag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtView_currencyRate"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_currencyName"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-21dp"
        android:layout_toEndOf="@+id/txtView_currencyName"
        android:text="TextView"
        android:textSize="15sp" />

</RelativeLayout>